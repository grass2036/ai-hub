{
  "dashboard": {
    "id": null,
    "title": "AI Hub 平台概览",
    "tags": ["ai-hub", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "系统状态概览",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "system_cpu_usage",
            "legendFormat": "CPU使用率",
            "refId": "A"
          },
          {
            "expr": "system_memory_usage",
            "legendFormat": "内存使用率",
            "refId": "B"
          },
          {
            "expr": "system_disk_usage",
            "legendFormat": "磁盘使用率",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["mean"],
            "fields": ""
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP请求率",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "请求/秒"
          }
        ]
      },
      {
        "id": 3,
        "title": "响应时间分布",
        "type": "heatmap",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "错误率",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m]) / rate(http_requests_total[5m])",
            "legendFormat": "4xx错误率",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m])",
            "legendFormat": "5xx错误率",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "错误率",
            "max": 1,
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "活跃用户数",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "active_users_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "服务可用性",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "targets": [
          {
            "expr": "service_availability",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.95},
                {"color": "green", "value": 0.99}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "缓存命中率",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "cache_hit_rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.9}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "活跃连接数",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 16
        },
        "targets": [
          {
            "expr": "active_connections_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "API收入趋势",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "expr": "increase(api_revenue_total[1h])",
            "legendFormat": "每小时收入",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "收入 ($)"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}